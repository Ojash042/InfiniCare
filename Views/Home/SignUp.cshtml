@model Infinicare_Ojash_Devkota.ViewModels.UserInfoModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "_Layout";
}
@{
    if (TempData["Error"] is not null) {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div> 
    }
}
<div class="container-fluid w-100 h-100 ">
    <h2 class="align-items-center p-3 justify-content-center">@ViewBag.Title</h2>
    <form asp-controller="Home" asp-action="SignUp" method="post" class="flex-row">
        <div class="form-group px-3 my-3 w-100">
            <label class="form-label">Username</label>
            <input class="form-control" type="text" placeholder="Enter Username" asp-for="UserCredentials.UserName" required/>
        </div>
        <div class="row my-3 px-3">
            <div class="col-md-3">
                <label>First Name</label>
                <input class="form-control" type="text" placeholder="Enter First Name..." required asp-for="UserDetails.FirstName"/>
            </div>
            <div class="col-md-3">
                <label>Middle Name</label>
                <input class="form-control" type="text" placeholder="Enter Middle Name..." asp-for="UserDetails.MiddleName"/>
            </div>
            <div class="col-md-3">
                <label>Last Name</label>
                <input class="form-control" type="text" placeholder="Enter Last Name..." required asp-for="UserDetails.LastName"/>
            </div>
        </div>
        <div class="row form-group px-3 my-3">
            <label>Password:</label>
            <input type="password" placeholder="Enter Password" class="form-control" asp-for="UserCredentials.UserPassword"/>
        </div>
        <div class="form-group px-3 my-3">
            <label>Country:</label>
            <select class="form-select" asp-for="UserDetails.Country">
                <option value="Nepal" selected="selected">Nepal</option>
                <option value="Malaysia">Malaysia</option>
            </select>
        </div>
        <div class="px-3 my-3 form-group">
            <label>Bank Account No.</label>
            <input type="text" class="form-control" placeholder="Account Number" asp-for="UserDetails.AccountNumber"/>
        </div>
        <div class="px-3 my-3 form-group">
            <input type="submit" class="btn-primary rounded-2 w-25 h-25" value="Submit"/>
        </div>
        <div class="form-control btn-secondary w-25 h-25">
           @Html.ActionLink("Go to Login", "Login", "Home");
        </div>
    </form>
</div>
